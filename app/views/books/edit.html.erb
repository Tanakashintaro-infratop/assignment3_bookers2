<div class='container'>
  <% if @book.errors.any? %>
    <h3 class="alert-list"><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li class="alert-list"><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

  		<%= form_with model:@book, local:true do |f| %>
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, autofocus: true, class: "form-control book_title"%><br>
        <label for="inputBody">Opinion</label>
        <%= f.text_field :body, class: "form-control book_body"%><br>
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      <br>
      <p><%=link_to "Show", book_path(@book.id) %> | <%=link_to "Back", books_path %></p>
  	</div>
</div>
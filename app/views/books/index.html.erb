<div class='container px-5 px-sm-0'>
  <% if @newbook.errors.any? %>
      <h3 class="alert-list"><%= @newbook.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @newbook.errors.full_messages.each do |message| %>
        <li class="alert-list"><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class='row'>
    <div class="col-md-3">
      <%= render 'homes/userinfo', user: @user %>
      <%= render 'homes/newbook', newbook: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
            <th></th>
            <th>Title</th>
            <th>body</th>
        </tr>
        <% @book.each do |book| %>
          <tr>
            <td width='64px'>
              <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image ,:fill, 40, 40, format:'jpg', fallback:"no_image.jpg", size:"40x40"%>
              <% end %>
            </td>
            <td width=''><%=link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
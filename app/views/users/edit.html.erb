<div class='container'>
  <% if @user.errors.any? %>
    <h3 class="alert-list"><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li class="alert-list"><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>User info</h1>
  		<%= form_with model: @user, url:user_path(@user.id), local:true do |f| %>
        <label>Name</label><br>
        <%= f.text_field :name, class: "form-control name"%><br>
        <label>Image</label><br>
        <%= f.attachment_field :profile_image%><br><br>
        <label>Introduction</label>
        <%= f.text_area :introduction, class: "form-control introduction"%><br>
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
      <% end %>
  	</div>
</div>
